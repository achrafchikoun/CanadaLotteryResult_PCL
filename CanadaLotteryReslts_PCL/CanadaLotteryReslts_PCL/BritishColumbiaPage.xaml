                        <BoxView HeightRequest="1" BackgroundColor="#dddddd" HorizontalOptions="FillAndExpand" Margin="5, 0, 5, 0"/>
                        <StackLayout Orientation="Horizontal" Margin="5, 10, 5, 15" HorizontalOptions="Center">
                            <Button x:Name="btnLottoMaxDetail" Clicked="btnLottoMaxDetail_Clicked" WidthRequest="100" Text="Details" TextColor="#565556" BackgroundColor="White" FontSize="15" FontAttributes="Bold" BorderWidth="1" BorderColor="#565556" HorizontalOptions="Start"/>
                            <Button x:Name="btnLottoMaxPrize" Clicked="btnLottoMaxPrize_Clicked" WidthRequest="135" Text="Prize Payouts" TextColor="#31708f" BackgroundColor="White" FontSize="15" FontAttributes="Bold" BorderWidth="1" BorderColor="#565556" HorizontalOptions="Center"/>
                            <Button x:Name="btnLottoMaxStatitics" Clicked="btnLottoMaxStatitics_Clicked" WidthRequest="110" Text="Statistics" TextColor="#8a6d3b" BackgroundColor="White" FontSize="15" FontAttributes="Bold" BorderWidth="1" BorderColor="#8a6d3b" HorizontalOptions="End"/>
