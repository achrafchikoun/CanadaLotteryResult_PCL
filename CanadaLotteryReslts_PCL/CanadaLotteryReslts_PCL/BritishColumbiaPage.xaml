                            <Button x:Name="btnLotto649Statitics" Clicked="btnLotto649Statitics_Clicked" WidthRequest="110" Text="Statistics" TextColor="#8a6d3b" BackgroundColor="White" FontSize="15" FontAttributes="Bold" BorderWidth="1" BorderColor="#8a6d3b" HorizontalOptions="End"/>
